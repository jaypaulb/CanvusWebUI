# Canvus Configuration
CANVUS_SERVER=https://your-canvus-server.com
CANVAS_NAME=your-canvas-name
CANVAS_ID=your-canvas-id
CANVUS_API_KEY=your-api-key

# WebUI Configuration
WEBUI_PWD=your-password
PORT=3000

# Security Configuration
ALLOW_SELF_SIGNED_CERTS=false  # Set to 'true' to allow self-signed certificates

# SSL Configuration (for HTTPS mode - used in container deployments)
# Leave empty for HTTP mode (local development)
# SSL_CERT_PATH=/certs/fullchain.pem
# SSL_KEY_PATH=/certs/privkey.pem